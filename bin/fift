#!/usr/bin/env node

// stdlib
const path = require('path');
const os = require('os');
process.env['FIFTPATH'] = path.resolve(__dirname, '..', 'fiftlib');

// Execute
const arch = os.arch();
const child = require('child_process');
const which = require('which');
const arg = require('arg');

const args = arg({
    '--onlyBundled': Boolean,
})
let sys;
if (!args['--onlyBundled']) {
    sys = which.sync('fift', {nothrow: true});
}
const fiftPath = sys || path.resolve(__dirname, 'macos', arch === 'arm64' ? 'fift-arm64' : 'fift');
const [, , ...argv] = process.argv;
try {
    child.execSync(fiftPath + ' ' + argv.join(' '), {
        stdio: 'inherit'
    });
} catch (e) {
    process.exit(1);
}